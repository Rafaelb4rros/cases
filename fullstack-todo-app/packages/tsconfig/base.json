{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "esModuleInterop": true,                            
    "moduleResolution": "node",
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,           
    "preserveWatchOutput": true,
    "strict": true,                                     
    "skipLibCheck": true                                
  },
    "exclude": ["node_modules"]
}
